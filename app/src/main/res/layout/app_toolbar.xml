<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultColor"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/toolbar_left_iv"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@drawable/app_toolbar_selector"
        android:scaleType="center"
        android:src="@drawable/app_back" />

    <TextView
        android:id="@id/toolbar_left_tv"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@drawable/app_toolbar_selector"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        android:visibility="gone" />

    <TextView
        android:id="@id/toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="@dimen/title_padding"
        android:paddingLeft="@dimen/margin_size_6"
        android:paddingRight="@dimen/margin_size_6"
        android:paddingTop="@dimen/title_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize" />

    <ImageView
        android:id="@id/toolbar_right_iv"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@drawable/app_toolbar_selector"
        android:scaleType="center"
        android:visibility="gone" />

    <TextView
        android:id="@id/toolbar_right_tv"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@drawable/app_toolbar_selector"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_17" />
</LinearLayout>